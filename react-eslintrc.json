{
  "extends": [
    "airbnb",
    "react-app",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "max-len": [2, { "code": 300 }],
    "no-console": 0,
    "import/prefer-default-export": 0,
    "no-nested-ternary": 0,
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-mixed-operators": ["error", {"allowSamePrecedence": true}],
    "prettier/prettier":["error", {"trailingComma": "all", "singleQuote": true, "printWidth": 130, "semi": true }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "it": true,
    "document": true,
    "fetch": true,
    "jest": true,
    "expect": true
  }
}
